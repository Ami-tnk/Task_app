<% if task.favorited_by?(current_user) %>
  <td>
    <%= link_to task_favorites_path(task), class: "text-danger", method: :delete do %>
      <i class="fas fa-heart"></i><%= task.favorites.count %>
    <% end %>
    <td></td>
  </td>
<% else %>
  <td>
    <%= link_to task_favorites_path(task), class: "text-primary", method: :post do %>
      <i class="fas fa-heart"></i><%= task.favorites.count %>
    <% end %>
    <td></td>
  </td>
<% end %>
<div class="row-12 my-3">
  <h1>タスクの新規登録</h1>
</div>

<div class="nav-link row-12 text-right">
  <%= link_to '一覧', tasks_path %>
</div>

    <%= form_with model: @task, local: true do |f| %>
      <div class="form-group">
        <h6>名称</h6>
        <%= f.text_field :name, class: 'form_control col-12', id: 'task_name' %>
      </div>
      <div class="form-group">
        <h6>詳しい説明</h6>
        <%= f.text_area :discription, class: 'form_control col-12', id: 'task_description'%>
      </div>

      <%= f.submit 'Create Task', class: 'btn btn-primary' %>
    <% end %>

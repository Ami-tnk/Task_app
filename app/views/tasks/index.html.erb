<div class="row-12 my-3">
  <h1>タスク一覧</h1>
</div>

<div class="row-12 my-3">
  <%= link_to '新規登録', new_task_path, class:'btn btn-primary' %>
</div>

<div class="row">
  <div class="col-12">
    <table class="table">
      <tr>
        <th>名称</th>
        <th>登録日時</th>
      </tr>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task.id) %></td>
        <td><%= task.created_at %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>